{
    "extends": "airbnb-base",
    "rules": {
        "no-trailing-spaces": ["error", {
            "ignoreComments": true,
            "skipBlankLines": true
        }],
        "no-plusplus": ["error", {
            "allowForLoopAfterthoughts": true
        }],
        "no-bitwise": ["error", {
            "allow": ["^"]
        }],
        "comma-dangle": ["error", "never"]
    }
}